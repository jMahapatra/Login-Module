ALTER TABLE `login`
  ADD PRIMARY KEY (`id`),
  ADD UNIQUE KEY `CL_UserName` (`username`),
  ADD UNIQUE KEY `LI_primaryemail` (`primary_email`) USING BTREE,
  ADD KEY `CL_Role` (`user_role`),
  ADD KEY `LI_primarymobile` (`primary_mobile`) USING BTREE;

--
-- AUTO_INCREMENT for dumped tables
--

--
-- AUTO_INCREMENT for table `login`
--
ALTER TABLE `login`
  MODIFY `id` int(11) NOT NULL AUTO_INCREMENT COMMENT 'Log Id (Serial No)';
